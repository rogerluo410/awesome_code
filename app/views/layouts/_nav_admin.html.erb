<div class="doc-Header doc-Header--mainView u-clearFix">
  <div class="doc-Header-logo">
    <img src="/static/image/logo.png" alt="Shinetechsoftware" />
  </div>
  <% if admin_signed_in? %>
    <ul class="nav navbar-nav call-navbar">
      <li class="<%= 'is-active' if admin_nav?(:users)%>">
        <%= link_to t('view.users'), admin_doctors_path %>
      </li>
      <li class="<%= 'is-active' if admin_nav?(:commissions)%>">
        <a href="<%= admin_commissions_path %>">commission and percent</a>
      </li>
      <li class="<%= 'is-active' if admin_nav?(:pharmacies)%>">
        <a href="<%= admin_pharmacies_path %>">pharmacies</a>
      </li>
      <li class="<%= 'is-active' if admin_nav?(:refunds)%>">
        <a href="<%= admin_refunds_path %>">refunds</a>
      </li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
          <%= truncate current_admin.type %> <%= truncate current_admin.name, length: 20 %> <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to t('view.edit_profile'), admin_edit_profile_path(current_admin.username) %></li>
          <li><%= link_to t('view.edit_password'),  admin_edit_password_path(current_admin.username)%></li>
        </ul>
      </li>
      <li>
        <a href="<%= destroy_admin_session_path %>" data-method="delete"><b><%= t('view.sign_out', default: 'Sign Out')%></b></a>
      </li>
    </ul>
  <% end %>
</div>
