<div class="doc-login">
  <div class="">
    <div class="doc-login-title">Sign up</div>
    <div class="center-block clearfix">
      <div class="btn-group u-formGroup u-btnGroup center-block is-hasTwo">
        <a href="/patients/sign_up">
          <label class="btn">
            I'm Patient
          </label>
        </a>
        <a href="/doctors/sign_up">
          <label class="btn active">
            I'm Doctor
          </label>
        </a>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="doc-signup-item  col-sm-6">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, require: true, class: "form-control", placeholder: 'Has' %>
        </div>
        <div class="doc-signup-item col-sm-6">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, require: true, class: "form-control", placeholder: 'Better' %>
        </div>
      </div>

      <div class="doc-signup-item">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email Address' %>
      </div>
      <div class="doc-signup-item">
        <%= f.label :phone %>
        <%= f.text_field :phone, require: true, class: "form-control" %>
      </div>
      <div class="doc-signup-item">
        <label for="doctor_password">Password (<%= @minimum_password_length %> characters minimum)</label>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
       <div class="doc-signup-item">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
      <div>
        <%= f.submit "Sign Up", class: "btn m-btn is-blue" %>
      </div>
    <% end %>
  </div>
</div>
